set -e

rep=${1}

cd ${rep}

arr=($(awk '/^--- | --- | ---$/{getline; print}' README.md))
dst=${arr[0]}
src=${arr[2]}
ver=${arr[4]}

mv Dockerfile Dockerfile~
awk '/^ARG/{count++; \
  if(count==1) sub("=.*$", "='${src}'"); \
  if(count==2) sub("=.*$", "='${ver}'"); \
} {print $0}' Dockerfile~ > Dockerfile

echo "Updated ${rep}/Dockerfile; run \`git tag ${rep}:${dst}\` after commit."
