if test $# -lt 1; then
	echo "usage: $0 <repository>"
	exit 0
fi

set -e

rep=${1}

cd ${rep}

arr=($(awk '/^--- | --- | ---$/{getline; print}' README*))

mv Dockerfile Dockerfile~
awk '/^ARG/{count++; \
  if(count==1) sub("=.*$", "='${arr[0]}'"); \
  if(count==2) sub("=.*$", "='${arr[2]}'"); \
  if(count==3) sub("=.*$", "='${arr[4]}'"); \
} {print $0}' Dockerfile~ > Dockerfile

if cmp -s Dockerfile Dockerfile~; then
	echo 'No update was made to "Dockerfile"; DONE.'
	mv Dockerfile~ Dockerfile # conserve inode
else
	cat <<EOF
Updated "${rep}/Dockerfile"
Please run \`git tag ${rep}:${arr[0]} && git push --tag\` after commit.
EOF
fi
